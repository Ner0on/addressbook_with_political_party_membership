<%= simple_form_for(@addressbook) do |f| %>
  <% if @addressbook.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@addressbook.errors.count, "error") %> while saving Addressbook</h4>
      <ul>
        <% @addressbook.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="col-md-4">
    <div class="form-group">
      <%= f.input :name , class: "form-control" %>
    </div>

    <%= f.submit class: 'btn btn-success' %>
  </div>
  

<% end %>
